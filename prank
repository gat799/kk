    <script>
        function checkResult() {
            const rollNumber = document.getElementById('rollNumber').value;
            const schoolNumber = document.getElementById('schoolNumber').value;
            const admitCardId = document.getElementById('admitCardId').value;
            const dob = document.getElementById('dob').value;
            const captcha = document.getElementById('captcha').value;
            
            if (rollNumber && schoolNumber && admitCardId && dob && captcha === '7X5B') {
                document.querySelector('.popup').style.display = 'block';
                setTimeout(() => {
                    window.location.href = "https://www.youtube.com/watch?v=dQw4w9WgXcQ"; // Rickroll link
                }, 2000); // Redirect after 2 seconds
            } else {
                alert('Please enter valid details and captcha.');
            }
        }
    </script>
